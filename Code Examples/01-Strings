import Foundation


// –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ —Å—Ç—Ä–æ–∫
var someCompany = "000 \"bigData\" - some cool company"
print(someCompany)
// 000 "bigData" - some cool company


var someCompany = "\t\r\t\t000\n \t \"bigData\" \r\n- some cool company"
print(someCompany)
//         000
//      "bigData"
//- some cool company


// –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —Å–∏–º–≤–æ–ª–æ–≤ Unicode
var someCompany = "000 'bigData' - some cool company i \u{1F496} it"
print(someCompany)
// 000 'bigData' - some cool company i üíñ it


// –°–æ–∑–¥–∞–Ω–∏–µ –ø—É—Å—Ç—ã—Ö —Å—Ç—Ä–æ–∫
var someString = ""
var someString = String()


// –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø—É—Å—Ç—ã—Ö —Å—Ç—Ä–æ–∫
var someString = String()
if someString == "" {
    print("Empty string")
}


// –í–∞—Ä–∏–∞–Ω—Ç —á–µ—Ä–µ–∑ isEmpty
var someString = String()
if someString.isEmpty {
    print("Empty string")
}


// –í–∞—Ä–∏–∞–Ω—Ç —á–µ—Ä–µ–∑ —Ñ—É–Ω–∫—Ü–∏—é
var emptyString = String()
func checkEmptyString() {
    if emptyString.isEmpty {
        emptyString = "I love winter"
    }
    print (emptyString)
}
checkEmptyString()


// –¢–∞–∫–∂–µ —Å—Ç—Ä–æ–∫–∏ —è–≤–ª—è—é—Ç—Å—è –∑–Ω–∞—á–∏–º—ã–º —Ç–∏–ø–æ–º (value type). –¢–æ –µ—Å—Ç—å –≤—Å–µ —Å—Ç—Ä–æ–∫–∏, –∫–æ—Ç–æ—Ä—ã–µ –≤—ã —Å–æ–∑–¥–∞—ë—Ç–µ, –∞ –≤–ø–æ—Å–ª–µ–¥—Å—Ç–≤–∏–∏ –ø–µ—Ä–µ–ø—Ä–∏—Å–≤–∞–∏–≤–∞–µ—Ç–µ, –∫–æ–ø–∏—Ä—É—é—Ç—Å—è –≤ –¥—Ä—É–≥–∏–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ, —Ç–µ–º —Å–∞–º—ã–º –ø–µ—Ä–≤–æ–Ω–∞—á–∞–ª—å–Ω–∞—è –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è –∏–ª–∏ –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞ –æ—Å—Ç–∞—ë—Ç—Å—è –Ω–µ—Ç—Ä–æ–Ω—É—Ç–æ–π –¥–æ —Ç–µ—Ö –ø–æ—Ä, –ø–æ–∫–∞ –≤—ã —Å–∞–º–∏ –Ω–µ –∑–∞—Ö–æ—Ç–∏—Ç–µ –µ—ë –∏–∑–º–µ–Ω–∏—Ç—å.
var firstString = "Some string"
var secondString = firstString
secondString = "Hello string"

print(firstString)
print (secondString)
// Some string
// Hello string


// –î–∞–≤–∞–π—Ç–µ –≤—ã–≤–µ–¥–µ–º —Å—Ç—Ä–æ–∫—É "I love winter ‚õÑ" –ø–æ—Å–∏–º–≤–æ–ª—å–Ω–æ –≤ –∫–æ–Ω—Å–æ–ª—å. –î—É–º–∞–µ–º, –≤—ã —É–∂–µ –¥–æ–≥–∞–¥–∞–ª–∏—Å—å, –∫–∞–∫ —ç—Ç–æ –º–æ–∂–Ω–æ —Å–¥–µ–ª–∞—Ç—å, –Ω–æ –≤—Å—ë –∂–µ –¥–∞–≤–∞–π—Ç–µ –ø–æ—Å–º–æ—Ç—Ä–∏–º –ø—Ä–∏–º–µ—Ä:
let iloveWinter = "I love winter"

func printCharsFromSring(){
    for char in iloveWinter{
        print(char)
    }
}
printCharsFromSring()


// –ö–∞–∫ –≤—ã –≤–∏–¥–∏—Ç–µ, –∑–¥–µ—Å—å –Ω–µ—Ç –Ω–∏—á–µ–≥–æ —Å–ª–æ–∂–Ω–æ–≥–æ, —Ç–∞–∫–∂–µ –º–æ–∂–Ω–æ –ø–æ—Å—á–∏—Ç–∞—Ç—å, —Å–∫–æ–ª—å–∫–æ —Å–∏–º–≤–æ–ª–æ–≤ –≤ —Å—Ç—Ä–æ–∫–µ:
let iloveWinter = "I love winter"
func printCountSimbols(){
    for count in 0...iloveWinter.count{
        print("count simbols: \(count)")
    }
}
printCountSimbols()


// –î–∞–≤–∞–π—Ç–µ –ø–æ–ø—Ä–æ–±—É–µ–º –ø–æ–ª—É—á–∏—Ç—å –≤—Ç–æ—Ä–æ–π –∏–Ω–¥–µ–∫—Å –∏–∑ —Å–ª–æ–≤–∞ love. –ü–æ—á–µ–º—É –≤—Ç–æ—Ä–æ–π? –î–∞ –ø–æ—Ç–æ–º—É, —á—Ç–æ –Ω—É–ª–µ–≤–æ–π –±—É–¥–µ—Ç I, –∑–∞—Ç–µ–º –ø–µ—Ä–≤—ã–π ‚Äî —ç—Ç–æ –Ω–∞—à –ø—Ä–æ–±–µ–ª, –∞ –≤—Ç–æ—Ä–æ–π ‚Äî –∫–∞–∫ —Ä–∞–∑ –∏ –±—É–¥–µ—Ç –Ω–∞—à–∞ –±—É–∫–≤–∞ L.–ß—Ç–æ–±—ã —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å –¥–∞–Ω–Ω—É—é –∑–∞–¥–∞—á—É, –Ω—É–∂–Ω–æ –≤–∑—è—Ç—å –≤—Å—é —Å—Ç—Ä–æ–∫—É, –Ω–∞–π—Ç–∏ –ø–µ—Ä–≤—ã–π —ç–ª–µ–º–µ–Ω—Ç –∏ —É–∫–∞–∑–∞—Ç—å, –∫–∞–∫–æ–π —Å–ª–µ–¥—É—é—â–∏–π –∏–Ω–¥–µ–∫—Å –≤–∑—è—Ç—å –ø–æ—Å–ª–µ –ø–µ—Ä–≤–æ–≥–æ:
let iloveWinter = "I love winter"
func printSecondIndexFromIloveWinter(){
    let char = iloveWinter[iloveWinter.index(iloveWinter.startIndex, offsetBy: 2)]
    print(char)
}
printSecondIndexFromIloveWinter()


// –ö–∞–∫ –≤—ã –≤–∏–¥–∏—Ç–µ, –º—ã –ø–æ–ª—É—á–∏–ª–∏ –∏–º–µ–Ω–Ω–æ –≤—Ç–æ—Ä–æ–π –∏–Ω–¥–µ–∫—Å. –¢–µ–ø–µ—Ä—å –≤—ã —Å–∞–º–∏ –º–æ–∂–µ—Ç–µ –ø–æ–ª—É—á–∏—Ç—å –ª—é–±–æ–π –∏–Ω–¥–µ–∫—Å, –æ—Ç–ª–∏—á–Ω—ã–π –æ—Ç –ø–µ—Ä–≤–æ–≥–æ –∏ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ :) –ù–æ –≤—Å—ë –∂–µ –¥–∞–≤–∞–π—Ç–µ –ø–æ–ª—É—á–∏–º –ø–µ—Ä–≤—ã–π –∏–Ω–¥–µ–∫—Å, –∞ —Ç–∞–∫–∂–µ –Ω–∞—à–µ–≥–æ —Å–Ω–µ–≥–æ–≤–∏–∫–∞, –∫–æ—Ç–æ—Ä—ã–π —è–≤–ª—è–µ—Ç—Å—è –ø–æ—Å–ª–µ–¥–Ω–∏–º:
let iloveWinter = "I love winter"
func printFirsAndLastIndex(){
    let firstChar = iloveWinter[iloveWinter.startIndex]
    let lastChar = iloveWinter[iloveWinter.index(before: iloveWinter.endIndex)]
    print("\(firstChar)\(lastChar)")
}
printFirsAndLastIndex ( )


// –ò–Ω–æ–≥–¥–∞ –ø—Ä–∏ –Ω–∞–ø–∏—Å–∞–Ω–∏–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–π –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –≤—Å—Ç–∞–≤–∏—Ç—å –∫–∞–∫–æ–π-—Ç–æ —Å–∏–º–≤–æ–ª –≤ —Å—Ç—Ä–æ–∫—É, –∞ —á—Ç–æ–±—ã —ç—Ç–æ —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å, –ø—Ä–∏–º–µ–Ω—è–µ—Ç—Å—è –º–µ—Ç–æ–¥ insert(:at:), –∫–æ—Ç–æ—Ä—ã–π –¥–æ–±–∞–≤–ª—è–µ—Ç —Å–∏–º–≤–æ–ª –ø–æ –∏–Ω–¥–µ–∫—Å—É. –î–∞–≤–∞–π—Ç–µ –∫–∞–∫ —Ä–∞–∑ –∏ –¥–æ–±–∞–≤–∏–º –≤ –Ω–∞—à—É —Ç–µ—Å—Ç–æ–≤—É—é —Å—Ç—Ä–æ–∫—É –∑–Ω–∞–∫ –≤–æ–ø—Ä–æ—Å–∞ –≤ —Å–∞–º—ã–π –∫–æ–Ω–µ—Ü –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è:
var iloveWinter = "I love winter"
func addQuestionMarkToEndLine(){
    iloveWinter.insert("?", at: iloveWinter.endIndex)
    print(iloveWinter)
}
addQuestionMarkToEndLine()


// –ü–æ–º–∏–º–æ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å–∏–º–≤–æ–ª–æ–≤ –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–ª—è—Ç—å —Å—Ç—Ä–æ–∫–∏ –≤ –Ω—É–∂–Ω—ã–µ –Ω–∞–º –º–µ—Å—Ç–∞ –ø–æ –∏–Ω–¥–µ–∫—Å—É. –î–∞–≤–∞–π—Ç–µ —Ç–µ–ø–µ—Ä—å –¥–æ–±–∞–≤–∏–º –≤ –∫–æ–Ω–µ—Ü –Ω–∞—à–µ–≥–æ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è —Ç–∞–∫–æ–π —Ç–µ–∫—Å—Ç: "? No dude, this is a joke I love summer!"
var iloveWinter = "I love winter"
func addQuestionAndText(){
    iloveWinter.insert(contentsOf: "? No dude, this is a joke I love summer!", at: iloveWinter.index (before: iloveWinter.endIndex))
    print(iloveWinter)
}
addQuestionAndText)


// –°–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ, –µ—Å–ª–∏ –º—ã –º–æ–∂–µ–º –¥–æ–±–∞–≤–ª—è—Ç—å —Å–∏–º–≤–æ–ª—ã, –∑–Ω–∞—á–∏—Ç –º–æ–∂–µ–º –∏ —É–¥–∞–ª—è—Ç—å –∏—Ö. –ù—É —á—Ç–æ –∂–µ, –¥–∞–≤–∞–π—Ç–µ —É–¥–∞–ª–∏–º –ª–∏—à–Ω–∏–µ —Å–∏–º–≤–æ–ª—ã, –∞ –∏–º–µ–Ω–Ω–æ —Å–Ω–µ–≥–æ–≤–∏–∫–∞. –õ–µ—Ç–æ–º –≤–µ–¥—å –Ω–µ—Ç —Å–Ω–µ–≥–æ–≤–∏–∫–æ–≤. –ù—É, –µ—Å–ª–∏ –≤—ã –∂–∏–≤–µ—Ç–µ –Ω–∞ –ö—Ä–∞–π–Ω–µ–º –°–µ–≤–µ—Ä–µ, —Ç–æ–≥–¥–∞ –æ—Å—Ç–∞–≤—å—Ç–µ –≤—Å—ë –∫–∞–∫ –µ—Å—Ç—å! –í–∞–º –º–æ–∂–Ω–æ :)
var string = "I love winter? No dude, this is a joke I love summer!"
func removeCharSnowman(){
    string.remove(at: string.index(before: string.endIndex))
}
removeCharSnowman()
print(string)


// –ù—É —á—Ç–æ, –Ω–∞—Å—Ç–∞–ª–æ –≤—Ä–µ–º—è —É–¥–∞–ª–∏—Ç—å –Ω–∞—à—É –ø–∏—Å–∞–Ω–∏–Ω—É –ø–æ—Å–ª–µ –∑–Ω–∞–∫–∞ –≤–æ–ø—Ä–æ—Å–∞, —Ç–æ –µ—Å—Ç—å –æ—Å—Ç–∞–≤–∏—Ç—å —Ç–æ–ª—å–∫–æ "I love winter?" –î–ª—è —ç—Ç–æ–≥–æ –º—ã –≤–æ–∑—å–º–µ–º –Ω–∞—à—É –∏—Å—Ö–æ–¥–Ω—É—é —Å—Ç—Ä–æ–∫—É, –Ω–∞–π–¥–µ–º —Å–∞–º—ã–π –ø–æ—Å–ª–µ–¥–Ω–∏–π –∏–Ω–¥–µ–∫—Å –∏ –æ—Ç—Å—á–∏—Ç–∞–µ–º –Ω—É–∂–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∏–Ω–¥–µ–∫—Å–æ–≤ –¥–æ –∑–Ω–∞–∫–∞ –≤–æ–ø—Ä–æ—Å–∞. –ó–∞—Ç–µ–º —É–¥–∞–ª–∏–º –Ω–∞–π–¥–µ–Ω–Ω—É—é –æ–±–ª–∞—Å—Ç—å –∏–∑ —Ç–µ–∫—É—â–µ–π —Å—Ç—Ä–æ–∫–∏. –ü–æ–≥–Ω–∞–ª–∏!
var string = "I love winter? No dude, this is a joke I love summer!"

func removePartOfString(){
    let range = string.index(string.endIndex, offsetBy: -38)..<string.endIndex
    string.removeSubrange (range)
}
removePartOfString()
print (string)


// –ü–æ–¥—Å—Ç—Ä–æ–∫–∏ ‚Äî —ç—Ç–æ –∫–æ—Ä–æ—Ç–∫–æ–∂–∏–≤—É—â–∏–µ —ç–ª–µ–º–µ–Ω—Ç—ã —Å—Ç—Ä–æ–∫, –Ω–∞–¥ –∫–æ—Ç–æ—Ä—ã–º–∏ –ø—Ä–æ–∏–∑–≤–æ–¥—è—Ç—Å—è –∫–∞–∫–∏–µ-—Ç–æ –º–∞–Ω–∏–ø—É–ª—è—Ü–∏–∏, –Ω–∞–ø—Ä–∏–º–µ—Ä, –≤—ã —Ä–µ–¥–∞–∫—Ç–∏—Ä—É–µ—Ç–µ —Å—Ç—Ä–æ–∫—É, –∏–∑–º–µ–Ω—è—è –≤ –Ω–µ–π –∫–∞–∫–∏–µ-—Ç–æ –∑–Ω–∞—á–µ–Ω–∏—è, –∞ –≤—Å–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ö—Ä–∞–Ω—è—Ç—Å—è –≤ –ø—Ä–µ–¥–µ–ª–∞—Ö —ç—Ç–æ–π —Å—Ç—Ä–æ–∫–∏. –ï—Å–ª–∏ –≤–∞–º –ø—Ä–∏–≥–æ–¥–∏—Ç—Å—è —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å –¥–∞–Ω–Ω—É—é –ø–æ–¥—Å—Ç—Ä–æ–∫—É, –≤–∞–º –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –∫–æ–Ω–≤–µ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –µ—ë –≤ —Å—Ç—Ä–æ–∫—É.
// –î–∞–≤–∞–π—Ç–µ —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–∏–º–µ—Ä –ø–æ–¥—Å—Ç—Ä–æ–∫–∏. –£ –Ω–∞—Å –µ—Å—Ç—å —Å—Ç—Ä–æ–∫–∞ "Hello my friend, do you like cookies?". –ò –Ω–∞–º –Ω—É–∂–Ω–æ –æ—Ç—Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –µ—ë, —É–±—Ä–∞–≤ –≤—Å–µ –∑–Ω–∞—á–µ–Ω–∏—è –ø–æ—Å–ª–µ –∑–∞–ø—è—Ç–æ–π:
let someString = "Hello my friend, do you like cookies?"
 
let index = someString.firstIndex(of: ",") ?? someString.endIndex
let firstPartOfSentence = someString[..<index]
let newSomeString = String(firstPartOfSentence)
 
print(newSomeString)


// –£ –Ω–∞—Å –µ—Å—Ç—å –¥–≤–µ —Å—Ç—Ä–æ–∫–∏: fistString –∏ lastString, –∫–æ—Ç–æ—Ä—ã–µ –∏–º–µ—é—Ç –æ–¥–∏–Ω–∞–∫–æ–≤—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è "Hello World!". –°—Ä–∞–≤–Ω–∏–≤–∞—Ç—å –±—É–¥–µ–º —á–µ—Ä–µ–∑ if else: –µ—Å–ª–∏ –Ω–∞—à–∏ —Å—Ç—Ä–æ–∫–∏ —Ä–∞–≤–Ω—ã, —Ç–æ –≤ –∫–æ–Ω—Å–æ–ª—å –≤—ã–≤–µ–¥–µ–º —Å–ª–µ–¥—É—é—â–∏–π —Ç–µ–∫—Å—Ç "we are identical", –∏–Ω–∞—á–µ ‚Äî "we are NOT identical".
let firstString = "Hello World!"
let lastString = "Hello World!"

func compareTwoStrings(){
    if firstString == lastString {
        print ("we are identical")
    } else {
        print ("we are NOT identical")
    }
}
compareTwoStrings ()


// UTF-8.
// –î–∞–≤–∞–π—Ç–µ –≤–æ–∑—å–º–µ–º –ø—Ä–æ–∏–∑–≤–æ–ª—å–Ω—É—é —Å—Ç—Ä–æ–∫—É –≤–∏–¥–∞:

let string = "I love Summer!—Ä–∏—Å—É–Ω–æ–∫"
// –ò—Ç–∞–∫, —É –Ω–∞—Å –≤—Å—ë –≥–æ—Ç–æ–≤–æ, –æ—Ç–æ–±—Ä–∞–∑–∏–º –Ω–∞—à—É —Å—Ç—Ä–æ–∫—É –≤ UTF-8. –î–ª—è —ç—Ç–æ–≥–æ –º—ã –¥–æ–ª–∂–Ω—ã –ø—Ä–æ–ø—É—Å—Ç–∏—Ç—å –Ω–∞—à—É —Å—Ç—Ä–æ–∫—É —á–µ—Ä–µ–∑ —Ü–∏–∫–ª for-in:

let string = "I love Summer!—Ä–∏—Å—É–Ω–æ–∫"
 
func getUTF8(){
  for code in string.utf8{
    print(code)
  }
}
getUTF8()
// –í —Ä–µ–∑—É–ª—å—Ç–∞—Ç–µ –≤—ã–≤–æ–¥–∞ –≤ –∫–æ–Ω—Å–æ–ª—å —É –Ω–∞—Å –ø–æ–ª—É—á–∏—Ç—Å—è –Ω–∞–±–æ—Ä —á–∏—Å–µ–ª, –≥–¥–µ –∫–∞–∂–¥–æ–µ —á–∏—Å–ª–æ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç —Å–∏–º–≤–æ–ª—É:
// 73 32 108 111 118 101 32 83 117 109 109 101 114 33 32 240 159 140 158


// –ù—É –∏ –ø–æ—Å–ª–µ–¥–Ω—è—è —Ç–∞–±–ª–∏—Ü–∞ –Ω–∞ —Å–µ–≥–æ–¥–Ω—è: –¥–∞–≤–∞–π—Ç–µ –ø—Ä–µ–æ–±—Ä–∞–∑—É–µ–º –Ω–∞—à—É —Å—Ç—Ä–æ–∫—É –≤ UTF-32 –ø—Ä–∏ –ø–æ–º–æ—â–∏ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è —Å—Ç—Ä–æ–∫–∏ string.unicodeScalars, –∞ –∑–∞—Ç–µ–º –ø–æ–ª—É—á–∏–º —Å–≤–æ–π—Å—Ç–≤–æ value.
// –ö–æ–¥ –Ω–µ–º–Ω–æ–≥–æ –æ—Ç–ª–∏—á–∞–µ—Ç—Å—è –æ—Ç –ø—Ä–µ–¥—ã–¥—É—â–∏—Ö –¥–≤—É—Ö:

let string = "I love Summer!—Ä–∏—Å—É–Ω–æ–∫"
 
func getUTF32(){
  for code in string.unicodeScalars{
    print(code.value)
  }
}
getUTF8()


